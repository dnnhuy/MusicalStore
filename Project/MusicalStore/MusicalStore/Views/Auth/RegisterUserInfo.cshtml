@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Thông tin";
}

<style>
    .card {
        border-radius: 20px;
    }

    .input-group {
        margin-bottom: 10px;
        /* Thêm khoảng cách giữa các input */
    }

        .input-group input {
            /* Độ cong của viền */
            border: 1px solid #ccc;
            /* Đường viền */
            padding: 10px;
            /* Khoảng cách bên trong */
            width: 100%;
            /* Chiếm toàn bộ chiều rộng */
            box-sizing: border-box;
            /* Đảm bảo padding không làm tăng kích thước */
        }
</style>
<div class="container">
    <div class="row mt-5">
        <div class="col-6 justify-content-center">
            <div class="card align-content-center">
                <form id="formRegisterInfo" class="p-5" action="">
                    <div class="input-group">
                        <span class="">Họ và tên <span style="color: red;">&#42;</span></span>
                        <input type="text" class="input-group" required>
                    </div>
                    <div class="input-group">
                        <span class="">Số CCCD <span style="color: red;">&#42;</span></span>
                        <input type="text" class="input-group" required>
                    </div>
                    <div class="input-group">
                        <span class="">Ngày sinh <span style="color: red;">&#42;</span></span>
                        <input type="text" class="input-group" required>
                    </div>
                    <div class="input-group">
                        <span class="">Giới tính</span>
                        <select class="input-group form-select w-100">
                            <option value="">Nam</option>
                            <option value="">Nữ</option>
                        </select>
                    </div>
                    <div class="input-group">
                        <span class="">Email <span style="color: red;">&#42;</span></span>
                        <input type="text" class="input-group" value="" required>
                    </div>
                    <div class="input-group">
                        <span class="">Địa chỉ <span style="color: red;">&#42;</span></span>
                        <input type="text" class="input-group" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Đăng ký thông tin</button>
                </form>
            </div>
        </div>
        <div class="col-auto">
            <div class="row">
                <div class="card justify-content-center">
                    <div class="image-container mt-3">
                        <img id="background" src="~/images/images.jpg" alt="">
                    </div>

                    <div class="input-group mt-3">
                        <input type="file" id="imageUpload" accept="image/*">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Đặt kích thước cố định cho container */
    .image-container {
        width: 400px; /* Chiều rộng cố định */
        height: 400px; /* Chiều cao cố định */
        overflow: hidden; /* Ẩn phần vượt ra ngoài container */
    }

        /* Áp dụng style cho ảnh bên trong container */
        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Cắt ảnh để vừa khít với container */
            object-position: top; /* Căn giữa ảnh */
        }
</style>

@section Scripts
{
    <script>
        $(document).ready(function(){
            console.log(@TempData["Email"])
        })
        document.getElementById('imageUpload').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    // Sửa lỗi chính tả từ "ocument" thành "document"
                    document.getElementById('background').src = e.target.result; // Cập nhật src của thẻ img
                }
                reader.readAsDataURL(file); // Đọc file dưới dạng Data URL (base64)
            }

        });

        $('#formRegisterInfo').on('submit',function(e){
            e.preventDefault();
            window.location.href = '@Url.Action("Index", "Home")'
        })
    </script>
}
