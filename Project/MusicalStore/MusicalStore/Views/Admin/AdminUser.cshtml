@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Quản lý khách hàng";
}

<h1>Quản lý khách hàng</h1>
<div class="container mt-5">
    <div class="">
        <table class="table table-sm table-bordered position-sticky">
            <thead class="table table-success">
                <tr>
                    <td class="text-center fw-bold">Họ tên</td>
                    <td class="text-center fw-bold">Ngày sinh</td>
                    <td class="text-center fw-bold">Chức vụ</td>
                    <td class="text-center fw-bold">Thao tác</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-center">
                        <a href="/#" class="link-underline-dark text-dark">Nguyễn Văn A</a>
                    </td>
                    <td class="text-center">@DateTime.Now.ToShortDateString()</td>
                    <td class="text-center">Nhân viên</td>
                    <td class="text-center">
                        <div class="row justify-content-center">
                            <button class="btn btn-sm btn-warning col-3 ms-1"><i class="bi bi-pencil-fill"></i></button>
                            <button class="btn btn-sm btn-warning col-3 ms-1"><i class="bi bi-trash"></i></button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<style>
    a:hover {
        color: black;
        cursor: pointer;
    }
</style>